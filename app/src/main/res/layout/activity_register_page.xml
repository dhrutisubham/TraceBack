<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/regisScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarDefaultDelayBeforeFade="0"
    android:scrollbarFadeDuration="0"
    android:scrollbarSize="0dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="730dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/regispage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerPage">

        <ProgressBar
            android:id="@+id/regPB"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/regisButton"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:autoText="false"
            android:background="@drawable/btn_large_solid"
            android:clickable="true"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/registerButton"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#323643"
            android:textSize="20sp"
            app:backgroundTint="#92DDFE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerConfirmpw" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1102"
            app:srcCompat="@drawable/darklogo_small" />

        <TextView
            android:id="@+id/registerBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/registerButton"
            android:textAllCaps="false"
            android:textColor="@color/themeblue"
            android:textSize="72sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/registerEmail"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/textfield"
            android:capitalize="none"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:hint="Enter Webmail"
            android:includeFontPadding="true"
            android:inputType="text"
            android:padding="16dp"
            android:textAllCaps="false"
            android:textColor="@color/themeblue"
            android:textColorHint="@color/themebluehint"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerBanner" />

        <EditText
            android:id="@+id/registerpw"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/textfield"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:hint="Create New Password"
            android:includeFontPadding="true"
            android:inputType="text"
            android:padding="16dp"
            android:password="true"
            android:textColor="@color/themeblue"
            android:textColorHint="@color/themebluehint"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerEmail" />

        <EditText
            android:id="@+id/registerConfirmpw"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/textfield"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:hint="Confirm New Password"
            android:includeFontPadding="true"
            android:inputType="text"
            android:padding="16dp"
            android:password="true"
            android:textColor="@color/themeblue"
            android:textColorHint="@color/themebluehint"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerpw" />

        <TextView
            android:id="@+id/regisText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/lato"
            android:text="Already Registered?"
            android:textColor="@color/themewhite"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regisButton" />

        <TextView
            android:id="@+id/regisLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:fontFamily="@font/lato"
            android:text="@string/loginButton"
            android:textColor="@color/themeblue"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regisText" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:src="@drawable/bgimage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regisLogin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>